{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Malaysia Organ Donation Pledges 2019",
  "projection": {
    "type": "equalEarth",
    "scale": 2500,
    "center": [109, 4]
  },
  "layer": [
    {
      "data": {
        "url": "data/malaysia.state.json",
        "format": { "type": "topojson", "feature": "malaysia.state" }
      },
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "Rate",
          "type": "quantitative",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal" },
          { "field": "Rate", "type": "quantitative" }
        ]
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "data/total_organ_pledges_state_2019.csv",
              "format": { "type": "csv" }
            },
            "key": "States",
            "fields": ["Rate"]
          }
        }
      ]
    }
  ]
}

